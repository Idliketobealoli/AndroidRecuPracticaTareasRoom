<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="15dp">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tv_title_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="20sp" android:textColor="#03A9F4"
            app:layout_constraintEnd_toStartOf="@+id/iv_priority_item" android:layout_marginEnd="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tv_date_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_item"
            app:layout_constraintStart_toStartOf="@+id/tv_title_item" android:layout_marginTop="5dp"
            android:textSize="12sp" app:layout_constraintEnd_toEndOf="@+id/tv_title_item"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tv_description_item" android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_item"
            app:layout_constraintStart_toStartOf="@+id/tv_date_item" android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_date_item"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_baseline_circle_24_green"
            android:id="@+id/iv_priority_item" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>